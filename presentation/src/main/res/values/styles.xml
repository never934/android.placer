<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_light</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="StartActivityTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_light</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowBackground">@drawable/background_start</item>
    </style>

    <style name="AuthTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_light</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="google_btn">
        <item name="android:background">@drawable/default_google_btn_background</item>
        <item name="android:drawableLeft">@drawable/ic_google_icon</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="default_btn">
        <item name="android:background">@drawable/default_gradient</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textColor">@color/text_on_color</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="default_small_btn">
        <item name="android:background">@drawable/default_gradient</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:textSize">@dimen/value_text_size</item>
        <item name="android:textColor">@color/text_on_color</item>
    </style>

    <style name="fab_button">
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textColor">@color/text_on_color</item>
        <item name="backgroundTint">@null</item>
        <item name="tint">@null</item>
    </style>

    <style name="main_title">
        <item name="android:textSize">@dimen/biggest_text_size</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="headline">
        <item name="android:textSize">@dimen/headline_text_size</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="default_label">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="help_headline">
        <item name="android:textSize">@dimen/help_title_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="item_title">
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="small_label">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="item_hint">
        <item name="android:textSize">@dimen/item_hint_text_size</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="comment_content">
        <item name="android:textSize">@dimen/item_hint_text_size</item>
        <item name="android:textColor">@color/comment_content_color</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="help_label">
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="filter_label" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/item_hint_text_size</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_filter_list_24</item>
    </style>

    <style name="roundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <style name="filter_item_label">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="edit_field_hint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="toggle_style">
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
    </style>

</resources>